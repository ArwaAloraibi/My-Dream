<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Dreams</title>
  </head>

  <body class="dreams-container">
    <%- include('../partials/_navbar.ejs', { user: currentUser  }) %>

    <h1 id="Welcome-line">Welcome to my dreams</h1>

   
    <a class="btn-dream" href="/users/<%= user._id %>/dreams/new">Add a Dream</a>
 
    <div class="dream-grid">
    <!-- to display items -->
      <% dreams.forEach((dream) => { %>
       <div class="dream-box">
          <a href="/users/<%= user._id %>/dreams/<%= dream._id %>">
            <%= dream.dream %>
          </a>
          </div>
        </div>
      <% }) %>
  </body>
</html>
